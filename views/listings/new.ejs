            <h3>add new one</h3>
            <form action="/listings/create" method="POST" enctype="multipart/form-data" class="needs-validation"
                novalidate>
                <div class="mb-3">
                    <label for="form-label">Title</label>
                    <input type="text" placeholder="enter title" name="list[title]" type="text" class="form-control"
                        required>
                    <div class="invalid-feedback">
                        required field
                    </div>
                </div>

                <div class="mb-3">
                    <label for="form-label">description</label>
                    <textarea type="textarea" aria-rowspan="2px" placeholder="enter description"
                        name="list[description]" type="text" class="form-control" required></textarea>
                    <div class="invalid-feedback">
                        required field
                    </div>
                    <div class="mb-3">
                        <label for="form-label">upload listing image</label>
                        <input name="image" type="file" class="form-control">
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="form-label">price</label>

                            <input type="text" placeholder="enter price" name="list[price]" type="text"
                                class="form-control" required>
                            <div class="invalid-feedback">
                                required field
                            </div>
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="form-label">country</label>
                            <input type="text" placeholder="enter country" name="list[country]" type="text"
                                class="form-control" required>
                            <div class="invalid-feedback">
                                required field
                            </div>
                        </div>
