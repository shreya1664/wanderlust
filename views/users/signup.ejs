<% layout("/layouts/boilerplate.ejs") %>
    <h3 class="mt-3 col-6 offset-3"> signup to WanderLust</h3>
    <div class="row mt-3">
        <div class="col-6 offset-3">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="form-label">username</label>
                    <input type="text" name="username" id="username" type="text" class="form-control" required>
                    <div class="invalid-feedback">
                        required field
                    </div>
                </div>

                <div class="mb-3">
                    <label for="form-label">email</label>
                    <input type="text" name="email" id="email" type="email" class="form-control" required>
                    <div class="invalid-feedback">
                        required field
                    </div>
                </div>

                <div class="mb-3">
                    <label for="form-label">password</label>
                    <input type="password" name="password" id="password" type="password" class="form-control" required>
                    <div class="invalid-feedback">
                        required field
                    </div>
                </div>

                <button class="btn btn-success mb-3">sign-up</button>

            </form>
        </div>
    </div>